/* modal æ¡† begin */
.modalWrapper{
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.2);
    z-index: 1999;
}
.modalWrapper .modalBox {
    -webkit-animation: hint 0.2s linear;
    animation: hint 0.2s linear;
    position: absolute;
    left: 50%;
    top: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}
@keyframes hint {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 0.5;
    }
    100% {
      opacity: 1;
    }
}
.modalWrapper .descripModal {
    box-sizing: border-box;
    background: #FFFFFF;
    border-radius: 20rpx;
    width: 670rpx;
    height: 900rpx;
    padding: 40rpx;
